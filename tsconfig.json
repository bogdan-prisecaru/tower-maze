{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "@bootstrap/*": ["client/src/bootstrap/*"],
      "@model/*": ["client/src/model/*"],
      "@module/*": ["client/src/module/*"],
      "@webc/*": ["client/src/webc/*"]
    },
    "lib": [
      "ES6",
      "DOM",
      "DOM.Iterable",
      "ScriptHost"
    ],
    "types": [],
  },

  "exclude": [ "node_modules" ],

  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  },

  "buildOnSave": false,

  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2,
    "convertTabsToSpaces": true
  },

  "atom": {
    "formatOnSave": true
  }
}
